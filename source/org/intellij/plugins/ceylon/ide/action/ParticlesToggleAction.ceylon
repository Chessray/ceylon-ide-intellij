import com.intellij.openapi.actionSystem {
    AnActionEvent,
    ToggleAction
}
import org.intellij.plugins.ceylon.ide.editor {
    Particles
}

shared class ParticlesToggleAction() extends ToggleAction() {

    isSelected(AnActionEvent e) => Particles.enabled;

    setSelected(AnActionEvent e, Boolean state) => Particles.enabled = state;
}
